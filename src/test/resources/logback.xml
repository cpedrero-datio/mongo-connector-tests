<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} Class [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.mongodb.driver" level="DEBUG"/>
    <logger name="com.datiobd.daas.DaasMongoConnector" level="DEBUG"/>


    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>